<!-- Ejs es un motor de plantillas que extiende la funcionalidad del HTML 
    En este caso será usado para evitar la dedundancia en los componentes de la pagina
-->
<% include partials/_header %>   
    <div class="container">
        <div class="row">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Ingresa un titulo" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" placeholder="Ingresa una descripcion" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Título</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(var i = 0; i<tasks.length; i++){ %>
                            <tr>
                                <td><%= i + 1 %></td>
                                <td><%= tasks[i].title%></td>
                                <td><%= tasks[i].description%></td>
                                <td>
                                    <a href="/done/<%= tasks[i]._id %>" class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">Hecha</a>
                                    <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                                    <a href="/edit/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                                </td>
                            </tr>
                        <%}%>    
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% include partials/_footer %>