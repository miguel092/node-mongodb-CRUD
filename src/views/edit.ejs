<% include partials/_header %>   
<div class="container">
<div class="row"> 
    <div class="col-md-4 offset-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/edit/<%= task._id %>" method="POST">
                    <div class="form-group">
                        <input type="text" value="<%= task.title %>" name="title" placeholder="Ingresa un titulo" class="form-control">
                    </div>
                    <div class="form-group">
                        <textarea name="description" cols="80" placeholder="Ingresa una descripcion"
                            class="form-control"><%= task.description %></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Modificar</button>
                </form>
            </div>
        </div>
    </div>
    </div>
</div>
<% include partials/_footer %>   